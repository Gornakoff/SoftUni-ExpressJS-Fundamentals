<div>
  <h2>Username: {{user.username}}</h2>
  <h2>First name: {{user.firstName}}</h2>
  <h2>Last name: {{user.lastName}}</h2>
</div>

<div>
  <h3>Threads:</h3>
  <div class="profile">
    {{#if threads}}
      {{#each threads}}
        <p>{{title}}</p>
      {{/each}}
    {{else}}
      No threads found!
    {{/if}}
  </div>

  <h3>Answers:</h3>
  <div class="profile">
    {{#if answers}}
      {{#each answers}}
        <p>{{answer}}</p>
      {{/each}}
    {{else}}
      No answers found!
    {{/if}}
  </div>
</div>