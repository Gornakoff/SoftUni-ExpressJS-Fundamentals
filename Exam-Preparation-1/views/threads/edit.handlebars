<form class="center-form" action="/thread/edit/{{thread._id}}" method="POST">
  <div class="form-group" >
    <label for="title">Title</label>
  <input class="input-field" type="textarea" name="title" value="{{thread.title}}" />
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input class="input-field" type="textarea" name="description" value="{{thread.description}}" />
  </div>

  <div class="form-group">
    <label for="Category">Category</label>
    <select class="input-field" name="category">
      {{#each categories}}
        {{#ifequal this._id  thread.category}}
          <option value="{{this._id}}">{{this.name}}</option>
        {{else}}
          <option value="{{this._id}}" selected>{{this.name}}</option>
        {{/ifequal}}
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <input class="form-btn btn btn-warning" type="submit" value="Save" />
  </div>
</form>