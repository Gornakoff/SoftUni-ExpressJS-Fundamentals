<form class="form center-form" action="/add" method="POST">
  <h2>Add thread</h2>

  <div class="form-group">
    <label for="title">Title</label>
    <input class="input-field" type="text" name="title" value="{{title}}" />
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input class="input-field" type="text" name="description"  value="{{description}}" />
  </div>

  <div class="form-group">
    <input class="btn form-btn" type="submit" value="Add" />
  </div>
</form>