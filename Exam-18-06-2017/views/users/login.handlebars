<form class="form center-form" action="/users/login" method="POST">
  <h2>Login</h2>

  <div class="form-group">
    <label for="username">Username</label>
    <input id="username" class="input-field" type="text" name="username" value="{{username}}" />
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input id="password" class="input-field" type="password" name="password" />
  </div>

  <div class="form-group">
    <input class="btn form-btn" type="submit" value="Login" />
  </div>
</form>