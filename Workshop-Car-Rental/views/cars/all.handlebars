{{#each cars}}
<div class="mb60 car-details">
  <h2>{{this.make }} {{this.model}} ({{this.year}})</h2>

  <img src="{{this.image}}" alt="{{this.make}} {{this.model}}" />

  <h3>{{this.pricePerDay}} BGN / day</h3>

  {{#if this.power}}
    <h3>{{this.power}} hp</h3>
  {{/if}}
</div>
{{else}}
  <h2>No cars available!</h2>
{{/each}}

<div class="pageBtn">
  {{#if hasPrevPage}}
    <a href="/cars/all?page={{prevPage}}">&lt;&lt;</a> 
    &nbsp;&nbsp;&nbsp; 
  {{/if}} 
  {{#if hasNextPage}}
    <a href="/cars/all?page={{nextPage}}">&gt;&gt;</a> 
  {{/if}}
</div>